<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_margin="20dp"
        tools:context=".MainActivity">

    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="#FFFFFF"
            android:id="@+id/jugadorText">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="@string/ingresa_nombre"
                android:inputType="text"
        />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
            android:text="@string/empezar_juego_nuevo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:onClick="clickBtnJugar"
            android:layout_weight="10"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp" android:id="@+id/textView"/>

    <!--TextView si sigue bajando despues del click bajar el height de los b
            android:visibility="gone"
    /-->
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/duelo"
            android:visibility="invisible">
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/my_recycler_view"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="#C1C1C1"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/jugador"
                android:gravity="center"
                android:text="SaÃºl"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"/>
        <RelativeLayout  android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_gravity="top|center">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/vidaTotalJugador"
                    android:gravity="center"
                    android:background="@drawable/background_bar"/>
            <TextView
                    android:layout_width="745dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/vidaPorcentajeJugador"
                    android:gravity="center"
                    android:background="@drawable/semirounded_corner"
                    android:text="100%"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/vidaJugador"
                    android:background="@drawable/rounded_corner"
            />
        </RelativeLayout>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mosntruo"
                android:gravity="center"
                android:text="Monstruo"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"/>
        <RelativeLayout  android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_gravity="top|center">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/vidaTotalMonstruo"
                    android:gravity="center"
                    android:background="@drawable/background_bar"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/vidaPorcentajeMosntruo"
                    android:background="@drawable/semirounded_corner"
                    android:gravity="center"
                    android:text="100%"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/vidaMosntruo"
                    android:background="@drawable/rounded_corner"
            />
        </RelativeLayout>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ganaste"
                android:id="@+id/mensajeFinal"
                android:gravity="center"
                android:visibility="invisible"
        />
        <Button
                android:text="Atacar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button3"
                app:backgroundTint="#E91E63"
                android:onClick="clickBtnAtacar"/>
        <Button
                android:text="Curar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button4"
                app:backgroundTint="#4CAF50"
                android:onClick="clickBtnCurar"/>
        <Button
                android:text="Rendirse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button5"
                app:backgroundTint="#8C8C8C"
                android:onClick="clickBtnRendirse"/>
    </LinearLayout>


</LinearLayout>